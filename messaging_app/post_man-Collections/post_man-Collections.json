          "mode": "raw",
          "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"yourpassword\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "http://localhost:8000/api/token/",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "token", ""]
        }
      },
      "response": []
    },
    {
      "name": "2. Create Conversation",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"participants\": [1, 2]\n}"
        },
        "url": {
          "raw": "http://localhost:8000/api/conversations/",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "conversations", ""]
        }
      },
      "response": []
    },
    {
      "name": "3. Send Message",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"content\": \"Hello from Postman!\"\n}"
        },
        "url": {
          "raw": "http://localhost:8000/api/conversations/1/messages/",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "conversations", "1", "messages", ""]
        }
      },
      "response": []
    },
    {
      "name": "4. Fetch Conversations",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}",
